<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_pos_config_form_view_inherit_product_bundle">
        <field name="name">res.config.settings.view.form.inherit.sh_pos_product_bundle</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="after">
                <h2 name="order">Habilitar Paquetes de Producto</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_product_bundle" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_product_bundle" />
                        </div>
                    </div>
                </div>
                <br />
            </block>
        </field>
    </record>
</odoo>
